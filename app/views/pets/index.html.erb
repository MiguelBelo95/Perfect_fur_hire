<div class="container-fluid">
  <h1>List of pets</h1>
  <div class="row">
              <div  class="col-sm-8">
                <% @pets.each do |pet| %>
                  <div class="card" style="width: 18rem;" >
                    <%= image_tag pet.image, class: "card-img-top", style: "width: 280px;" %>
                    <div class="card-body">
                      <%# <%= image_tag(@pet.pet_url) %>
                      <h5 class="card-title"><%= pet.name %></h5>
                      <p class="card-text"><%= pet.description %></p>
                      <%= link_to "Read more", pet, class: "btn btn-primary" %>
                      <%# <a href="" class="btn btn-primary">Read more</a> %>
                    </div>
                  </div>
                <% end %>
                </div>

<div class="col-sm-4 position-sticky sticky-top">
      <div style="width: 100%; height: 600px;"



        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>

  </div>
</div>
